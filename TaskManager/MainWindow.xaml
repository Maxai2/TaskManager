<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

	<Grid Grid.Row="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="0.5*"/>
		</Grid.RowDefinitions>

		<ListBox Grid.Row="0" Margin="10" ItemsSource="{Binding Tasks}">

			<ListBox.ContextMenu> 
				<ContextMenu>
					<MenuItem Header="Kill" Click="MenuItem_Click"/>
				</ContextMenu>
			</ListBox.ContextMenu>

			<ListBox.ItemTemplate>
				<DataTemplate>
					<UniformGrid Rows="1">
						
						<Label Content="{Binding TaskName}"/>
						<Label Content="{Binding TaskId}"/>
						<Label Content="{Binding RAM}"/>
						<Label Content="{Binding CPU}"/>	
						
					</UniformGrid>
				</DataTemplate>
			</ListBox.ItemTemplate>

		</ListBox>

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="5*"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<TextBox Grid.Column="0" Margin="10"/>
			<Button Grid.Column="1" Content="Add" Margin="20 10"/>
		</Grid>

	</Grid>

</Window>
